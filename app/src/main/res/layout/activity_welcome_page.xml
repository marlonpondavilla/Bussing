<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical"
    tools:context=".ui.splash_welcome.WelcomePage">

    <ImageView
        android:id="@+id/imageIllustration"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/welcomepage_illustration" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="Welcome to"
            android:textSize="26dp"
            android:textColor="#333333"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="bussing express"
            android:textSize="26dp"
            android:textColor="#133ac2"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="We're excited to help you plan your journey.\nEasily book your tickets and manage\n your trips with us. Let's get started."
        android:textSize="17dp"
        android:layout_marginTop="4dp"
        android:textColor="#7d7d7d"
        android:fontFamily="@font/nunito_semibold"/>

<!--    <com.google.android.material.button.MaterialButton-->
<!--        android:id="@+id/getStartedButton"-->
<!--        android:layout_width="360dp"-->
<!--        android:layout_height="56dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="100dp"-->
<!--        android:text="Get Started"-->
<!--        android:textSize="18dp"-->
<!--        android:textColor="#f9f9f9"-->
<!--        app:cornerRadius="10dp"-->
<!--        app:backgroundTint="#384246"-->
<!--        android:fontFamily="@font/nunito_semibold"-->
<!--        android:textAllCaps="false"-->
<!--        android:layout_marginBottom="0dp"-->
<!--        />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="60dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signInButton"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:text="Log In"
            android:textSize="18dp"
            android:textColor="#f9f9f9"
            app:cornerRadius="10dp"
            app:backgroundTint="#384246"
            android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            android:layout_marginBottom="0dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerButton"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:text="Register"
            android:textSize="18dp"
            android:textColor="#f9f9f9"
            app:cornerRadius="10dp"
            android:backgroundTint="#133ac2"
            android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            />

    </LinearLayout>

</LinearLayout>