<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:contentPadding="10dp"
    android:id="@+id/cardView"
    android:onClick="expand"
    android:backgroundTint="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/mainDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/busNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="--"
                            android:fontFamily="@font/nunito_bold"
                            android:textSize="16dp"
                            android:textColor="#1e2336"
                            android:gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/fromLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"

                                    android:text="--"
                                    android:textColor="#133AC1"
                                    android:textSize="16dp"
                                    android:fontFamily="@font/nunito_bold"
                                    android:gravity="center" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/arrow_right_solid"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="6dp"/>

                                <TextView
                                    android:id="@+id/toWhereLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="--"
                                    android:textSize="16dp"
                                    android:textColor="#133AC1"
                                    android:fontFamily="@font/nunito_bold"
                                    android:gravity="center"
                                    android:layout_marginLeft="6dp"/>

                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/busCompany"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/card_button"
                            android:backgroundTint="#fff"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Bus Location"
                                android:textSize="20dp"
                                android:textColor="#595959"
                                android:layout_gravity="center"
                                android:fontFamily="@font/nunito_bold"/>

                            <TextView
                                android:id="@+id/currentLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="16dp"
                                android:textColor="#03c03c"
                                android:layout_gravity="center"
                                android:fontFamily="@font/nunito_semibold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Departure Time"
                                android:textSize="20dp"
                                android:layout_gravity="center"
                                android:textColor="#595959"
                                android:layout_marginTop="14dp"
                                android:fontFamily="@font/nunito_bold"/>

                            <TextView
                                android:id="@+id/departureTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="16dp"
                                android:textColor="#1D9793"
                                android:layout_gravity="center"
                                android:fontFamily="@font/nunito_semibold"/>

                        </LinearLayout>


                        <!--dropdown imageview-->
                        <ImageView
                            android:id="@+id/dropdown"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/chevron_down"
                            android:scaleType="center"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="12dp">

                    <LinearLayout
                        android:id="@+id/busDetailsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Driver:"
                            android:textSize="20dp"
                            android:fontFamily="@font/nunito_bold"
                            android:textColor="#595959"
                            />

                        <TextView
                            android:id="@+id/driverName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16dp"
                            android:textColor="#1D9793"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="6dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Conductor:"
                            android:textSize="20dp"
                            android:fontFamily="@font/nunito_bold"
                            android:textColor="#595959"
                            />

                        <TextView
                            android:id="@+id/conductorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="16dp"
                            android:textColor="#1D9793"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Capacity:"
                                android:textSize="20dp"
                                android:textColor="#595959"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_marginRight="10dp"/>

                            <TextView
                                android:id="@+id/capacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="--"
                                android:textSize="20dp"
                                android:textColor="#1D9793"
                                android:fontFamily="@font/nunito_semibold"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14dp"
                                android:text="Price:"
                                android:textSize="20dp"
                                android:textColor="#595959"
                                android:fontFamily="@font/nunito_bold"
                                android:layout_marginRight="10dp"/>

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="20dp"
                                android:textColor="#03c03c"
                                android:fontFamily="@font/nunito_bold"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Status: "
                        android:textSize="16dp"
                        android:textColor="#133AC1"
                        android:fontFamily="@font/nunito_semibold"
                        />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="--"
                        android:textSize="16dp"
                        android:textColor="#133AC1"
                        android:fontFamily="@font/nunito_semibold"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/bookButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Book"
                    android:textColor="#f9f9f9"
                    android:fontFamily="@font/nunito_bold"
                    android:background="@drawable/account_bg" />

            </LinearLayout>

</androidx.cardview.widget.CardView>