<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:contentPadding="10dp"
    android:id="@+id/cardBusStatus"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/transactionTypeImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bus_front" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/busNo"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="--"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="#010101"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="12dp"
                    android:fontFamily="@font/nunito_semibold"/>

                <ImageView
                    android:id="@+id/trip"
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:background="@drawable/viseversa"
                    android:backgroundTint="#808080"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"/>

                <TextView
                    android:id="@+id/toWhere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="12dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginLeft="6dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/dpTime"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="--"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="#808080"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="--"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="#03c03c"
                android:textSize="14dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/busStatus"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="54dp"
            android:text="--"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#03c03c"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>