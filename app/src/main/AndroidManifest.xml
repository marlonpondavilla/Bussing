<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="marlon.dev.bussing">
    <!-- Permissions for internet access (needed by Firebase) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/bussing_standard"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bussing"
        tools:targetApi="31">
        <activity
            android:name=".ui.BusInfoActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity> <!-- entry point of the app -->
        <activity
            android:name=".ui.splash_welcome.SplashScreen"
            android:exported="false"
            android:label="Bussing"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bussing"></activity>
        <activity
            android:name=".ui.splash_welcome.WelcomePage"
            android:exported="true"
            android:label="Bussing"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Firebase UI sign-in activity (no intent-filter for MAIN/LAUNCHER) -->
        <activity
            android:name=".firebase.FirebaseUIActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FirebaseAuthTheme"></activity> <!-- MapsActivity -->
        <activity
            android:name=".MapsActivity"
            android:exported="false"
            android:label="Bussing"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="res/values/secrets.xml" />
    </application>

</manifest>